# Salvi Platform Production Environment Variables

# Database Configuration
DATABASE_URL=postgresql://salvi:salvi_secret@postgres:5432/salvi_production
POSTGRES_USER=salvi
POSTGRES_PASSWORD=salvi_secret
POSTGRES_DB=salvi_production

# Redis Configuration
REDIS_URL=redis://redis:6379

# Payment Gateway Webhook Secrets
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
INTERAC_WEBHOOK_SECRET=your_interac_webhook_secret
CRYPTO_WEBHOOK_SECRET=your_crypto_webhook_secret

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.12345
HEDERA_OPERATOR_KEY=your_hedera_private_key
HEDERA_TOPIC_ID=0.0.12345

# XRPL Configuration
XRPL_SERVER_URL=wss://s.altnet.rippletest.net:51233
XRPL_WALLET_SEED=your_xrpl_wallet_seed

# Algorand Configuration
ALGORAND_ALGOD_URL=https://testnet-api.algonode.cloud
ALGORAND_INDEXER_URL=https://testnet-idx.algonode.cloud
ALGORAND_MNEMONIC=your_algorand_mnemonic_25_words
ALGORAND_APP_ID=12345

# HPTP Configuration
HPTP_PEERS=femtosecond-service:3006
HPTP_POLL_INTERVAL=1000
CLOCK_SOURCE=system

# Logging
LOG_LEVEL=info

# Kong API Gateway
KONG_KONNECT_TOKEN=your_kong_konnect_token
